<div class="tab-pane" id="kt_tabs_7_2" role="tabpanel">
<div class="kt-section__content table-responsive">
<table class="table">
<thead>
<tr>
<th>Reference</th>
<th>Amount</th>
<th>Date</th>
<th>Status</th>
</tr>
</thead>
<tbody>
<% higherPurchaseTransactions.forEach(transaction => { %>
<tr>
<td><%= transaction.reference %></td>
<td>&#8358;<span data-format="comma"><%= transaction.amount %></span></td>
<td><%= transaction._doc.created_at %></td>
<% let statusMap = { "success": "success", "pending": "warning", "failed": "danger" } %>
<td class="text-capitalize kt-font-<%= statusMap[transaction.status] %>"><%= transaction.status %></td>
</tr>
<% }) %>
</tbody>
</table>
</div>
</div>