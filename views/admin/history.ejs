<div class="naira__header kt-margin-t-20">
<h3 class="naira__title">
Payment History
</h3>
<span class="naira__desc">
Last 10 recent payments to Nairalife
</span>
</div>

<div class="table-responsive">
<table class="table">
<tr>
<th>Reference</th>
<th>Amount</th>
<th>Date</th>
<th>Status</th>
</tr>
<tbody>
<% if(higherPurchaseTransactions.length > 1){ %>
<% higherPurchaseTransactions.forEach(transaction => { %>
<tr>
<td><%= transaction.reference %></td>
<td>&#8358;<span data-format="comma"><%= transaction.amount %></span></td>
<td><%= transaction._doc.created_at %></td>
<% let statusMap = { "success": "success", "pending": "info", "failed": "danger" } %>
<td class="text-capitalize kt-font-<%= statusMap[transaction.status] %>"><%= transaction.status %></td>
</tr>
<% }) %>
<% } %>

<% if(higherPurchaseTransactions.length == 0){ %>
<tr><td colspan="2">Member has currently not made any payment</td></tr>
<% } %>

</tbody>
</table>
</div>