<!DOCTYPE html>
<html>
<head>
	<title>Change Card</title>
</head>
<body>
	<p><button class="btn btn-primary" onclick="payWithPaystack()">Change card</button></p>

	<script src="https://js.paystack.co/v1/inline.js"></script>
	<script>
		function payWithPaystack(event){
			var handler = PaystackPop.setup({
				key: 'pk_test_c390fc7c87abac72d463b6de024098319a6e92f3',
				email: '<%= user.email %>',
				amount: "10000",
				currency: "NGN",
				channels: ["card"],
				metadata: {
					user_id: "<%= user.user_id %>",
					id: "<%= user._id %>",
					type: "CHANGE_CARD"
				},
				callback: triggerReload,
				onClose: function(){}
			});
			handler.openIframe();
		}
	</script>

	<script type="text/javascript">
		function triggerReload(){
			setTimeout(function(){
				window.location.href = window.location.href
			}, 4000)
		}
	</script>


</body>
</html>